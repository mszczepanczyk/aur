# Maintainer: Mariusz Szczepa≈Ñczyk <mszczepanczyk@gmail.com>

pkgname=libtcejdb
pkgver=1.0.57
pkgrel=1
pkgdesc="Embedded JSON Database engine"
arch=('i686' 'x86_64')
url="http://ejdb.org"
license=('LGPL')
depends=('zlib')
makedepends=('git')
md5sums=('SKIP')
_gitrepo='https://github.com/Softmotions/ejdb.git'
_gitname='ejdb'

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitrepo" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
  
  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  
  git checkout "v$pkgver"

  cd "$srcdir/$_gitname-build/tcejdb"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$_gitname-build/tcejdb"
  
  make PREFIX=/usr DESTDIR="$pkgdir" install
  chmod 644 ${pkgdir}/usr/lib/libtcejdb.a
}


