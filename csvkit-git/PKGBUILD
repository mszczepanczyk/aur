pkgname=csvkit-git
pkgver=20130109
pkgrel=1
pkgdesc="A suite of utilities for converting to and working with CSV."
arch=('any')
url="http://csvkit.readthedocs.org"
license=('MIT')
depends=('python2' 'python2-argparse>=1.2.1' 'python2-xlrd>=0.7.1' 'python2-dateutil>=1.5' 'python2-sqlalchemy>=0.6.6' 'python2-openpyxl>=1.5.7' 'python2-dbfpy>=0.94.003')
makedepends=('git')
md5sums=('SKIP')
source=('csvkit::git://github.com/onyxfish/csvkit.git')

pkgver() {
  cd "$srcdir/csvkit"
  git log -1 --format="%cd" --date=short | tr -d '-'
}

package() {
  cd "$srcdir/csvkit"
  python2 setup.py install --root="$pkgdir/"
}


